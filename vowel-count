public class Vowels {

  public static int getCount(String str) {
    int vowelsCount = 0;
    String a = "";
    for(int i = 0; i < str.length(); i++)
    {
      a += str.charAt(i);
      a.toLowerCase();
      if(a.charAt(i)=='a' || a.charAt(i)=='e' || a.charAt(i)=='i' || a.charAt(i)=='o' || a.charAt(i)=='u')
          vowelsCount++;
    }
    return vowelsCount;
  }

}
